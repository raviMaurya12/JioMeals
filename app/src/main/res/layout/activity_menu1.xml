<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="User Name"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp">

        <EditText
            android:id="@+id/main2_search_input"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Search Item Here"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/main_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/main2_search_input"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/main2_search_input"
            android:text="Search"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/main1_image2"
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_alignTop="@+id/main2_image1"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/main2_image1"
            app:srcCompat="@drawable/sample" />

        <ImageView
            android:id="@+id/main2_image1"
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_alignStart="@+id/main2_search_input"
            android:layout_below="@+id/main2_search_input"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/sample" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_below="@+id/main1_image2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/main1_image2"
            app:srcCompat="@drawable/sample" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_alignStart="@+id/main1_image2"
            android:layout_below="@+id/main1_image2"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/sample" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_alignStart="@+id/main2_search_input"
            android:layout_below="@+id/main1_image2"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/sample" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_alignTop="@+id/main1_image2"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/main1_image2"
            app:srcCompat="@drawable/sample" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/main2_search_input"
            android:layout_alignTop="@+id/main1_image2"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>